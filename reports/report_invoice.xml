<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_fiscal" inherit_id="account.report_invoice_document">
        <xpath expr="/t[@t-name='account.report_invoice_document']" position="replace">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/>
                
                <!-- Document title for header -->
                <t t-set="layout_document_title" t-if="not o.device_id">
                    <span t-if="not proforma"/>
                    <span t-else="">PROFORMA</span>
                    <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                    <span t-elif="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                    <span t-elif="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                    <span t-elif="o.move_type == 'out_refund' and o.state == 'posted'">Credit Note</span>
                    <span t-elif="o.move_type == 'out_refund' and o.state == 'draft'">Draft Credit Note</span>
                    <span t-elif="o.move_type == 'out_refund' and o.state == 'cancel'">Cancelled Credit Note</span>
                    <span t-elif="o.move_type == 'in_refund'">Vendor Credit Note</span>
                    <span t-elif="o.move_type == 'in_invoice'">Vendor Bill</span>
                    <span t-if="o.name != '/'" t-field="o.name">INV/2023/0001</span>
                </t>
                
                <div class="mt-5 clearfix">
                    <div class="page mb-4">
                        <!-- Conditional Display Based on Device ID -->
                        <t t-if="o.device_id">
                            <!-- Fiscal Invoice Header -->
                            <h2 class="col-6" style="max-width: 50%; text-align: left; margin-top: 0 !important; padding-top: 5px;">
                                <br/>
                                <span style="" t-field="o.currency_id.name"/>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">FISCAL TAX INVOICE</span>
                                <span t-elif="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                                <span t-elif="o.move_type == 'out_invoice' and o.state == 'cancel'">CANCELLED INVOICE</span>
                                <span t-elif="o.move_type == 'out_refund' and o.state == 'posted'" style="text-align: left; margin-top: -10% !important;">CREDIT NOTE</span>
                                <span t-elif="o.move_type == 'out_refund' and o.state == 'draft'">Draft Credit Note</span>
                                <span t-elif="o.move_type == 'out_refund' and o.state == 'cancel'">Cancelled Credit Note</span>
                                <span t-elif="o.move_type == 'in_refund'">Vendor Credit Note</span>
                                <span t-elif="o.move_type == 'in_invoice'">Vendor Bill</span>
                            </h2>
                            <br/>
                            <div class="row">
                                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'}">
                                    <strong>CUSTOMER DETAILS</strong>
                                </div>
                                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'}">
                                    <t t-if="o.state == 'posted' and o.move_type == 'out_invoice'">
                                        <strong>INVOICE DETAILS</strong>
                                    </t>
                                    <t t-if="o.move_type == 'out_refund'">
                                        <strong>CREDIT NOTE DETAILS</strong>
                                    </t>
                                    <t t-if="o.state == 'draft' and o.move_type == 'out_invoice'">
                                        <strong>DRAFT INVOICE DETAILS</strong>
                                    </t>
                                </div>
                            </div>
                            <hr style="border: 1px solid #000000; margin-top: 5px; margin-bottom: 20px;"/>
                            
                            <!-- Customer and Invoice Details Section for Fiscal Invoice -->
                            <div class="row">
                                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'}">
                                    <span t-field="o.partner_id.name"/>
                                    <br/>
                                    TIN:
                                    <span t-field="o.customer_tin"/>
                                    <br/>
                                    VAT:
                                    <span t-field="o.customer_vat"/>
                                    <br/>
                                    <span t-field="o.partner_id.street"/> <span t-field="o.partner_id.street2"/>
                                    <br/>
                                    <span t-field="o.partner_id.city"/>, <span t-field="o.partner_id.country_id.name"/>
                                    <br/>
                                    <span t-field="o.partner_id.phone"/>
                                    <br/>
                                    <span t-field="o.partner_id.email"/>
                                    <br/>
                                </div>
                                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'}">
                                    <t t-if="o.state == 'posted' and o.move_type == 'out_invoice'">
                                        <strong>Invoice Number:</strong>
                                        <span t-if="o.name != '/'" t-esc="o.name"/>
                                        <br/>
                                        <strong>Document Source:</strong>
                                        <span t-field="o.invoice_origin"/>
                                        <br/>
                                        <!-- Fiscalization Details -->
                                        <span t-if="o.fiscalised">
                                            <strong>Fiscalisation Date:</strong>
                                            <span t-field="o.fiscal_date" t-if="o.fiscalised"/>
                                            <span t-field="o.fiscal_date" t-else=""/>
                                        </span>
                                        <br/>
                                        <strong>Invoice Date:</strong>
                                        <span t-field="o.invoice_date"/>
                                        <br/>
                                        <strong>Terms of Payment:</strong>
                                        <span>Payment Upon Invoice</span>
                                        <br/>
                                        <strong>Due Date:</strong>
                                        <span t-field="o.invoice_date_due"/>
                                        <br/>
                                    </t>
                                    <t t-if="o.move_type == 'out_refund'">
                                        <strong>Credit Note No:</strong>
                                        <span t-if="o.name != '/'" t-esc="o.name.replace('/', '')"/>
                                        <br/>
                                        <strong>Reference:</strong>
                                        <span t-esc="o.ref.split(',')[0].strip().replace('/', '') if ',' in o.ref else o.ref.strip().replace('/', '')"/>
                                        <br/>
                                        <strong>Document Source:</strong>
                                        <span t-field="o.invoice_origin"/>
                                        <br/>
                                        <strong>Credit Note Date:</strong>
                                        <span t-field="o.invoice_date"/>
                                        <br/>
                                    </t>
                                    <t t-if="o.state == 'draft' and o.move_type == 'out_invoice'">
                                        <strong>Document Number:</strong>
                                        <span t-if="o.name != '/'" t-esc="o.name.replace('/', '')"/>
                                        <br/>
                                        <strong>Document Source:</strong>
                                        <span t-field="o.invoice_origin"/>
                                        <br/>
                                        <strong>Invoice Date:</strong>
                                        <span t-field="o.invoice_date"/>
                                        <br/>
                                        <strong>Due Date:</strong>
                                        <strong><span t-field="o.invoice_date_due"/></strong>
                                        <br/>
                                    </t>
                                </div>
                            </div>
                        </t>
                        <t t-else="">
                            <!-- Standard Invoice Header -->
                            <div class="oe_structure"/>
                            <div id="informations" class="row mb-4">
                                <div class="col" t-if="o.invoice_date" name="invoice_date">
                                    <t t-if="o.move_type == 'out_invoice'"><strong>Invoice Date</strong></t>
                                    <t t-elif="o.move_type == 'out_refund'"><strong>Credit Note Date</strong></t>
                                    <t t-elif="o.move_type == 'out_receipt'"><strong>Receipt Date</strong></t>
                                    <t t-else=""><strong>Date</strong></t>
                                    <div t-field="o.invoice_date">2023-09-12</div>
                                </div>
                                <div class="col" t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'" name="due_date">
                                    <strong>Due Date</strong>
                                    <div t-field="o.invoice_date_due">2023-10-31</div>
                                </div>
                                <div class="col" t-if="o.delivery_date" name="delivery_date">
                                    <strong>Delivery Date</strong>
                                    <div t-field="o.delivery_date">2023-09-25</div>
                                </div>
                                <div class="col" t-if="o.invoice_origin" name="origin">
                                    <strong>Source</strong>
                                    <div t-field="o.invoice_origin">SO123</div>
                                </div>
                                <div class="col" t-if="o.partner_id.ref" name="customer_code">
                                    <strong>Customer Code</strong>
                                    <div t-field="o.partner_id.ref"/>
                                </div>
                                <div class="col" t-if="o.ref" name="reference">
                                    <strong>Reference</strong>
                                    <div t-field="o.ref">INV/2023/00001</div>
                                </div>
                                <div class="col" t-if="o.invoice_incoterm_id" name="incoterm_id">
                                    <strong>Incoterm</strong>
                                    <div t-if="o.incoterm_location">
                                        <span t-field="o.invoice_incoterm_id.code"/> <br/>
                                        <span t-field="o.incoterm_location"/>
                                    </div>
                                    <div t-else="" t-field="o.invoice_incoterm_id.code" class="m-0"/>
                                </div>
                            </div>
                        </t>

                        <!-- Common section for both fiscal and standard invoice -->
                        <hr t-if="o.device_id" style="border: 1px solid #000000; margin-top: 5px; margin-bottom: 20px;"/>
                        
                        <!-- Fiscalization Details Section -->
                        <div class="row" t-if="o.fiscalised and o.device_id">
                            <div class="col-12">
                                <div style="border: 1px solid #000; padding: 10px; margin-bottom: 20px;">
                                    <h4 style="border-bottom: 1px solid #000; padding-bottom: 5px;">FISCALISATION DETAILS</h4>
                                    <div class="row">
                                        <div class="col-8">
                                            <div class="row">
                                                <div class="col-6">
                                                    <strong>Receipt Number:</strong>
                                                </div>
                                                <div class="col-6">
                                                    <span t-field="o.receipt_number"/>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-6">
                                                    <strong>Device ID:</strong>
                                                </div>
                                                <div class="col-6">
                                                    <span t-field="o.device_id"/>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-6">
                                                    <strong>Receipt Global No:</strong>
                                                </div>
                                                <div class="col-6">
                                                    <span t-field="o.receipt_global_number"/>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-6">
                                                    <strong>Verification Code:</strong>
                                                </div>
                                                <div class="col-6">
                                                    <span t-field="o.verification_code"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-4 text-center">
                                            <t t-if="o.qr_code">
                                                <img t-if="o.qr_code" 
                                                    t-att-src="'data:image/png;base64,%s' % o.qr_code.decode('utf-8')" 
                                                    style="width:115px;height:115px"
                                                    alt="Fiscal QR Code" />
                                                <p class="text-center text-muted small mt-2">Scan to Verify</p>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Invoice Line Items Table -->
                        <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
                        <div class="oe_structure"/>
                        <t t-set="current_disc" t-value="0"/>
                        <table class="table table-sm o_main_table" name="invoice_line_table" style="margin-top: 20px">
                            <thead>
                                <tr>
                                    <th name="th_hs_code" t-if="o.device_id" class="text-start fw-bold" style="width: 10%">
                                        <span style="font-size: 13px;">HS CODE</span>
                                    </th>
                                    <th name="th_description" class="text-start fw-bold" style="width: 45%">
                                        <span style="font-size: 13px;">DESCRIPTION</span>
                                    </th>
                                    <th name="th_quantity" class="text-center fw-bold" style="width: 5%">
                                        <span style="font-size: 13px;">QTY</span>
                                    </th>
                                    <th name="th_priceunit" t-attf-class="text-end fw-bold" style="width: 10%">
                                        <span style="font-size: 13px;">UNIT PRICE</span>
                                    </th>
                                    <th name="th_price_unit" t-attf-class="text-end fw-bold" style="width: 10%">
                                        <span style="font-size: 13px;">TOTAL <br/>(Excl. VAT)</span>
                                    </th>
                                    <th name="th_taxes" class="text-end fw-bold" style="width: 10%">
                                        <span style="font-size: 13px;">VAT</span>
                                    </th>
                                    <th name="th_subtotal_incl" class="text-end fw-bold" style="width: 10%">
                                        <span style="font-size: 13px;">TOTAL <br/>(Incl. VAT)</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="current_total" t-value="0"/>
                                <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                                <t t-foreach="lines" t-as="line">
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                                    <t t-set="current_total" t-value="current_total + line.price_total"/>
                                    <t t-set="discount_value" t-value="line.price_subtotal * (line.discount / 100)"/>
                                    <t t-set="current_disc" t-value="current_disc + discount_value"/>
                                    <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="line.display_type == 'product'" name="account_invoice_line_accountable">
                                            <td name="td_hs_code" t-if="o.device_id">
                                                <span t-if="line.product_id.hs_code" t-field="line.product_id.hs_code"/>
                                            </td>
                                            <td name="account_invoice_line_name">
                                                <t t-if="line.name">
                                                    <span t-field="line.name" t-options="{'widget': 'text'}"></span>
                                                    <t t-if="line.discount > 0 and o.device_id">
                                                        <span>(Discount) </span>
                                                    </t>
                                                </t>
                                            </td>
                                            <td name="td_quantity" class="text-end">
                                                <span t-field="line.quantity"></span>
                                            </td>
                                            <td name="td_price_unit" t-attf-class="text-end">
                                                <span class="text-nowrap" t-esc="'{:,.2f}'.format(line.price_unit)"/>
                                            </td>
                                            <td t-attf-class="text-end">
                                                <span t-esc="'{:,.2f}'.format(line.price_subtotal)"/>
                                            </td>
                                            <t t-set="taxes" t-value="', '.join([(tax.invoice_label or tax.name) for tax in line.tax_ids])"/>
                                            <td name="td_taxes" class="text-end">
                                                <span t-esc="'{:,.2f}'.format(line.price_total - line.price_subtotal)"/>
                                            </td>
                                            <td class="text-end o_price_total">
                                                <span class="text-nowrap" t-esc="'{:,.2f}'.format(line.price_total)"/>
                                            </td>
                                        </t>
                                        <t t-elif="line.display_type == 'line_section'">
                                            <td t-if="o.device_id" colspan="1"></td>
                                            <td colspan="6">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"></span>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-elif="line.display_type == 'line_note'">
                                            <td t-if="o.device_id" colspan="1"></td>
                                            <td colspan="6">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"></span>
                                            </td>
                                        </t>
                                    </tr>
                                    <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-end">
                                            <td t-if="o.device_id" colspan="1"></td>
                                            <td colspan="6">
                                                <strong class="mr16">Subtotal</strong>
                                                <span t-out="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"></span>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                        
                        <!-- Totals Section -->
                        <div class="clearfix mb-4">
                            <div id="total" class="row">
                                <div>
                                    <table class="table table-sm" style="page-break-inside: avoid;">
                                        <t t-set="tax_totals" t-value="o.tax_totals"/>
                                        <t t-set="currency" t-value="o.currency_id"/>
                                        <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                                            <tr class="border-black o_subtotal">
                                                <td style="">
                                                    <strong style="color: #000;">Subtotal (Excl. VAT) <span class="m-0" t-field="o.currency_id.name"/>
                                                    </strong>
                                                </td>
                                                <td class="text-end">
                                                    <span t-att-class="eo_subtotal_footer_separator" t-esc="'{:,.2f}'.format(o.amount_untaxed)"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <t t-if="not display_tax_base">
                                                    <td>
                                                        <span class="text-nowrap">
                                                            <strong>VAT</strong>
                                                        </span>
                                                    </td>
                                                    <td class="text-end o_price_total">
                                                        <span class="text-nowrap" t-esc="'{:,.2f}'.format(o.amount_tax)"></span>
                                                    </td>
                                                </t>
                                                <t t-else="">
                                                    <td style="border: 1px solid #000;">
                                                        <span class="text-nowrap">
                                                            <strong>VAT</strong>
                                                        </span>
                                                    </td>
                                                    <td class="text-end o_price_total">
                                                        <span class="text-nowrap" t-esc="'{:,.2f}'.format(o.amount_tax)"></span>
                                                    </td>
                                                </t>
                                            </tr>
                                        </t>
                                        <t t-if="not tax_totals['subtotals']">
                                            <tr class="border-black o_subtotal">
                                                <td>
                                                    <strong>Subtotal (Excl.) </strong>
                                                </td>
                                                <td class="text-end">
                                                    <span t-att-class="oe_subtotal_footer_separator">00.00</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <t>
                                                    <td>
                                                        <span class="text-nowrap">Discount</span>
                                                    </td>
                                                    <td class="text-end o_price_total">
                                                        <t t-if="current_disc == 0">
                                                            0.00</t>
                                                        <t t-elif="current_disc &gt; 0">
                                                            <span t-esc="'{:,.2f}'.format(current_disc)"/>
                                                        </t>
                                                    </td>
                                                </t>
                                            </tr>
                                            <tr>
                                                <t>
                                                    <td>
                                                        <span class="text-nowrap">VAT</span>
                                                    </td>
                                                    <td class="text-end o_price_total">
                                                        <span class="text-nowrap">0.00</span>
                                                    </td>
                                                </t>
                                            </tr>
                                        </t>
                                        <tr class="border-green o_total">
                                            <td>
                                                <strong style="color: #FFF;"><span class="m-0" t-field="o.currency_id.name"/> INVOICE TOTAL
                                                </strong>
                                            </td>
                                            <td class="text-end">
                                                <span class="text-light" t-esc="'{:,.2f}'.format(o.amount_total)"></span>
                                            </td>
                                        </tr>
                                        <t t-if="print_with_payments">
                                            <t t-if="o.payment_state != 'invoicing_legacy'">
                                                <t t-set="payments_vals" t-value="o.sudo().invoice_payments_widget and o.sudo().invoice_payments_widget['content'] or []"/>
                                                <t t-foreach="payments_vals" t-as="payment_vals">
                                                    <tr t-if="payment_vals['is_exchange'] == 0">
                                                        <td>
                                                            <i class="oe_form_field text-end oe_payment_label">Date Paid <t t-esc="payment_vals['date']" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                                                            </i>
                                                        </td>
                                                        <td class="text-end">
                                                            <span t-esc="'{:,.2f}'.format(payment_vals['amount'])" t-options="{&quot;widget&quot;: &quot;False&quot;}"/>
                                                        </td>
                                                    </tr>
                                                </t>
                                                <t t-if="len(payments_vals) &gt; 0">
                                                    <tr class="border-black fw-bold">
                                                        <td>
                                                            <span><span t-field="o.currency_id.name"/> AMOUNT DUE</span>
                                                        </td>
                                                        <td class="text-end">
                                                            <span t-esc="'{:,.2f}'.format(o.amount_residual)" t-options="{&quot;widget&quot;: &quot;False&quot;}"/>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </t>
                                        </t>
                                    </table>
                                </div>
                            </div>
                            
                            <!-- Footer Section (Credit Note Reason & QR Code) -->
                            <div class="row align-items-start" style="margin-top: 20px !important;">
                                <div t-attf-class="#{'col-8' if report_type != 'html' else 'col-sm-9 col-md-8'} ">
                                    <t t-if="o.move_type == 'out_refund'">
                                        <div style="border: 1px solid #000; padding: 10px; margin-top: 20px;">
                                            <strong>Reason for Credit Note:</strong>
                                            <br/>
                                            <span t-esc="' '.join(o.ref.split(',')[1:]).strip() if ',' in o.ref else o.ref"/>
                                        </div>
                                    </t>
                                </div>
                                
                                <!-- QR Code Section -->
                                <!-- <div class="col-4 text-end">
                                    <t t-if="o.fiscalised and o.qr_code">
                                        <img t-if="o.qr_code" 
                                            t-att-src="'data:image/png;base64,%s' % o.qr_code.decode('utf-8')" 
                                            style="width:115px;height:115px"
                                            alt="Fiscal QR Code" />
                                        <p class="mb-0">Verification Code</p>
                                        <span t-field="o.verification_code"/>
                                    </t>
                                </div> -->
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>