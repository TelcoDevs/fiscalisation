<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_get_new_token" model="ir.cron">
            <field name="name">Auto Manage Fiscal Device Token</field>
            <field name="model_id" ref="model_fiscal_device"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model._cron_refresh_tokens()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="True"/>
        </record>

        <record id="ir_cron_device_status_check" model="ir.cron">
            <field name="name">Fiscal Device Status Check</field>
            <field name="model_id" ref="model_fiscal_device"/>
            <field name="state">code</field>
            <field name="code">model.cron_check_device_status()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="active">True</field>
        </record>

        <!-- Morning cron to automatically open fiscal day between 7:00-7:30 AM -->
        <record id="ir_cron_auto_open_fiscal_day" model="ir.cron">
            <field name="name">Auto Open Fiscal Day</field>
            <field name="model_id" ref="model_fiscal_device"/>
            <field name="state">code</field>
            <field name="code">model.cron_auto_open_fiscal_day()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <!-- Random time between 7:00 and 7:30 AM -->
            <field name="nextcall" eval="(datetime.now().replace(hour=7, minute=random.randint(0, 30), second=0) + timedelta(days=(datetime.now().hour >= 7) and 1 or 0)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
        
        <!-- Night cron to automatically close fiscal day between 11:30 PM and midnight -->
        <record id="ir_cron_auto_close_fiscal_day" model="ir.cron">
            <field name="name">Auto Close Fiscal Day</field>
            <field name="model_id" ref="model_fiscal_device"/>
            <field name="state">code</field>
            <field name="code">model.cron_auto_close_fiscal_day()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <!-- Random time between 11:30 PM and midnight -->
            <field name="nextcall" eval="(datetime.now().replace(hour=23, minute=random.randint(30, 59), second=0) + timedelta(days=(datetime.now().hour >= 23 and datetime.now().minute >= 30) and 1 or 0)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
    </data>
</odoo>
